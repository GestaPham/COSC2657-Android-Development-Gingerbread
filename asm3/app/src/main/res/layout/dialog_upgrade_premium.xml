<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewPremiumTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upgrade to Premium"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewNormalStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Normal Status:\n- Send up to 10 messages to our AI relationship consultant every day."
        android:paddingTop="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toBottomOf="@id/textViewPremiumTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewPremiumStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Premium Status:\n- Up to 100 messages every day\n- Status upgrade permanently for both you and your partner"
        android:paddingTop="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toBottomOf="@id/textViewNormalStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonPurchasePremium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upgrade Now"
        android:backgroundTint="@color/light_pink"
        app:layout_constraintTop_toBottomOf="@id/textViewPremiumStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
