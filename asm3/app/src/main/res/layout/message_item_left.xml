<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/chatProfileImgLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:shapeAppearanceOverlay="@style/profile_circle"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="#D9D9D9"
            app:srcCompat="#D9D9D9"/>

        <TextView
            android:id="@+id/messageTextLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/chatProfileImgLeft"
            android:background="@drawable/message_background"
            android:padding="20dp"
            android:ellipsize="end"
            android:text="A very long message that spans multiple lines to test resizing of the layout dynamically." />

    </RelativeLayout>


</LinearLayout>