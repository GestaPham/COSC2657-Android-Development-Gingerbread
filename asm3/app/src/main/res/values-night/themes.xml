<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Asm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->
        <item name="colorPrimary">#B0A4BE</item> <!-- Lavender -->
        <item name="colorPrimaryVariant">#D6CEE2</item> <!-- Soft pastel lavender -->
        <item name="colorSecondary">#C5DFF8</item> <!-- Soft blue -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text/icons -->
        <item name="colorSurface">#33373F</item> <!-- Slightly lighter gray -->
        <item name="colorOnSurface">#FFFFFF</item> <!-- White text/icons -->
        <item name="bottomNavigationStyle">@style/CustomBottomNavigation</item>
    </style>

    <style name="Theme.Asm" parent="Base.Theme.Asm" />

    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">#292D35</item> <!-- Dark background for bottom navigation -->
        <item name="itemIconTint">#C5DFF8</item> <!-- Light blue icons -->
        <item name="itemTextColor">#C5DFF8</item> <!-- Light blue text -->
    </style>
</resources>
